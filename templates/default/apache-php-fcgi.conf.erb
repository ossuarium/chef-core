<IfModule mod_fastcgi.c>
  FastCGIExternalServer <%= node['apache']['cgibin_dir'] %>/<%= @name %>/php-fcgi -socket <%= @socket %> -pass-header Authorization
  Action php-fcgi-<%= @name %> /php-fcgi-<%= @name %>-alias
  Alias /php-fcgi-<%= @name %>-alias <%= node['apache']['cgibin_dir'] %>/<%= @name %>/php-fcgi

  <Directory <%= node['apache']['cgibin_dir'] %>/<%= @name %>>
    Require all granted
  </Directory>

  <Directory <%= @docroot %>>
    <FilesMatch "\.(php)$">
      SetHandler php-fcgi-<%= @name %>
      Require all granted
    </FilesMatch>
  </Directory>
</IfModule>
